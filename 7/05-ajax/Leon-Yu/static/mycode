console.log("STARTING");

//gets result from upcase page and uses it here
$("#b").click(function(){
    var data = $("#data").val();
    //$("#data").val("");

    $.getJSON("/upcase",{data:data},function(r){
	$("#result").text(r.result);
	$("#thelist").append($("<li>"+r.result+"</li>"));
    });
});


